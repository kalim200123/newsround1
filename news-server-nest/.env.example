# Server Port
PORT=3002

# --- Database Connection (MySQL) ---
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_db_password
DB_DATABASE=news

# --- JWT Authentication Secrets ---
# Secret key for signing user-facing JWTs
USER_JWT_SECRET=a_secure_random_string_for_users
USER_JWT_EXPIRES_IN=12h

# Secret key for signing admin-facing JWTs
ADMIN_JWT_SECRET=a_different_secure_random_string_for_admins
ADMIN_JWT_EXPIRES_IN=24h

# --- AWS S3 Configuration (for file uploads) ---
AWS_REGION=your_aws_region # e.g., ap-northeast-2
AWS_ACCESS_KEY_ID=your_aws_s3_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_s3_secret_access_key
AWS_S3_BUCKET_NAME=your_s3_bucket_name

# --- Internal API Secret ---
# Used for securing internal endpoints called by other services (e.g., Python scripts)
INTERNAL_API_SECRET=a_strong_secret_for_internal_service_calls

# --- Python Script Integration ---
# Optional: Path to the python executable if it's not in the system's PATH
PYTHON_EXECUTABLE_PATH=python3
# Optional: Set to 'true' to enable AI-based article collection features
ENABLE_AI_COLLECTION=false
